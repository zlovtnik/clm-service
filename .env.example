# CLM Service Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# Oracle ORDS Configuration (preferred for production)
# =============================================================================
# Replace with your actual ORDS endpoint URL
ORDS_BASE_URL=https://your-ords-host.example.com/ords/YOUR_SCHEMA
ORDS_SCHEMA=YOUR_SCHEMA
# Auth Types: BASIC, JWT_PASSTHROUGH, OAUTH2, NONE
# - BASIC: Service account username/password (simpler, recommended for most cases)
# - JWT_PASSTHROUGH: Forward Keycloak JWT to ORDS (requires ORDS OAuth2 config)
ORDS_AUTH_TYPE=BASIC
ORDS_USERNAME=
ORDS_PASSWORD=
# OAuth2 client credentials (if using OAUTH2 auth-type)
# ORDS_CLIENT_ID=
# ORDS_CLIENT_SECRET=
# ORDS_TOKEN_URL=
ORDS_DEBUG=false

# =============================================================================
# Oracle JDBC/Wallet Configuration (fallback for JDBC access)
# =============================================================================
ORACLE_WALLET_ENABLED=false
ORACLE_WALLET_LOCATION=/path/to/wallet
ORACLE_TNS_NAME=mainerc_medium
ORACLE_USERNAME=
ORACLE_PASSWORD=

# =============================================================================
# Keycloak / OAuth2 Security Configuration
# =============================================================================
# Keycloak realm URLs:
#   JWK Set: https://<keycloak>/realms/<realm>/protocol/openid-connect/certs
#   Issuer:  https://<keycloak>/realms/<realm>
OAUTH2_JWK_SET_URI=https://keycloak.example.com/realms/clm/protocol/openid-connect/certs
OAUTH2_ISSUER_URI=https://keycloak.example.com/realms/clm
OAUTH2_AUDIENCE=clm-service

# JWT claim names (Keycloak defaults)
# For realm roles: realm_access.roles
# For client roles: resource_access.<client-id>.roles
JWT_ROLES_CLAIM=realm_access.roles
JWT_TENANT_CLAIM=tenant_id
JWT_USER_CLAIM=preferred_username

# =============================================================================
# Security Settings
# =============================================================================
# Require X-Tenant-Id header for API requests
REQUIRE_TENANT_HEADER=true
# Validate tenant from JWT matches X-Tenant-Id header
VALIDATE_TENANT_JWT=true
# Optional API key for service-to-service auth
API_KEY=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN_1=http://localhost:3000
CORS_ORIGIN_2=http://localhost:5173
# Add additional origins as needed (do not leave empty)
# CORS_ORIGIN_3=https://your-production-domain.com

# =============================================================================
# Application Settings
# =============================================================================
CLM_TENANT_ID=DEFAULT
SERVER_PORT=8080

# =============================================================================
# Logging (optional)
# =============================================================================
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_GPRINTEX=DEBUG
